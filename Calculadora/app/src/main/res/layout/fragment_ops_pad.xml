<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.jlmarting.calculadora.opsPad">

    <!-- TODO: Update blank fragment layout -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/gridLayout"
        android:layout_toEndOf="@+id/gridLayout"
        android:rowCount="6"
        android:columnCount="3"
        android:layout_alignTop="@+id/gridLayout">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:text="+"
            android:id="@+id/btnAdd"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/btnSub"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:text="-"
            android:id="@+id/btnSub"
            android:layout_below="@+id/btnAdd"
            android:layout_alignStart="@+id/btnMul"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="/"
            android:id="@+id/btnDiv"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnMul"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:text="*"
            android:id="@+id/btnMul"
            android:layout_below="@+id/btnSub"
            android:layout_alignEnd="@+id/textView"
            android:layout_row="2"
            android:layout_column="1" />

    </GridLayout>

</FrameLayout>
